@model IEnumerable<Team_WASD___Game_Store_Stock_Management_System.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Game List</h2>

<p>
    @Html.ActionLink("Create New Game Entry", "Create")
    <br/>
    @Html.ActionLink("View Publisher List", "Publishers")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameTitle)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.Publisher.PublisherName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre.GenreName)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Platform)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InStockAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.GameTitle)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre.GenreName)
    </td>

@*    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>*@

    <td>
        @Html.DisplayFor(modelItem => item.Platform.PlatformName)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.InStockAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
